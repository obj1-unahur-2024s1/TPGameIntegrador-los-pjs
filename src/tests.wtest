import main.*
import niveles.*
import objetos.*

test "El nivel 1 empieza con 3 vidas"{
    assert.equals(3,modoNormal.cantVidas())
}

test "El nivel 2 solo tiene una vida"{
    assert.equals(1,modoDificil.cantVidas())
}

test "Sapo se queja cuando pierde una vida"{
	assert.equals("Ouch!",sapo.textoDanio())
}

test "Perder una vida"{
	juego.vidas(3)
	juego.restarVida()
	assert.equals(2,juego.vidas())
}

test "Obtener una mosca"{
	juego.contadorDeMoscas(4)
	juego.sumarMoscaConseguida()
	assert.equals(5,juego.contadorDeMoscas())	
}

test "Hay que obtener 5 moscas en nivel 1"{
    assert.equals(5,modoNormal.maxDeMoscas())
}

test "Hay que obtener 10 moscas en nivel 2"{
    assert.equals(10,modoDificil.maxDeMoscas())
}

test "Los autos del segundo nivel se mueven mas rapido que los del primero"{
	assert.that(modoNormal.velocidadObstaculos()>modoDificil.velocidadObstaculos()) 
}
